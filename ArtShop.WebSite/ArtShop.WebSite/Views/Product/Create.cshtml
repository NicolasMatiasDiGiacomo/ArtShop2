@model ArtShop.Data.Model.Product
@{
    ViewBag.Title = "Create";
}

<h2>Nuevo producto</h2>
<div>
    @using (Html.BeginForm())
    {
        <div class="form">
            <hr />
            <span class="text-danger">@ViewBag.MessageDanger</span>
            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                <div>
                    @Html.EditorFor(model => model.Title)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ArtistId)
                <div>
                    @Html.EditorFor(model => model.ArtistId)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Image)
                <div>
                    @Html.EditorFor(model => model.Image)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                <div>
                    @Html.EditorFor(model => model.Price)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.QuantitySold)
                <div>
                    @Html.EditorFor(model => model.QuantitySold)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AvgStars)
                <div>
                    @Html.EditorFor(model => model.AvgStars)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                <div>
                    @Html.EditorFor(model => model.Description)
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Guardar" class="btn-input" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Ir a lista", "ToList", "Product")
</div>
